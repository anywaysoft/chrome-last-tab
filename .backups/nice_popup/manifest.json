{
  "manifest_version": 3,
  "name": "Tab History Navigator",
  "version": "1.0",
  "description": "Navigates to the previously active tab when a tab is closed or via toolbar button",
  "permissions": [
    "tabs",
    "tabGroups",
    "windows",
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Switch to Previous Tab"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
