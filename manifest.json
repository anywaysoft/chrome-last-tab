{
  "manifest_version": 3,
  "name": "Last Active Tab Switcher",
  "version": "2.0.0",
  "description": "Switch to the previously active tab when closing the current tab, and provide a tab history menu.",
  "permissions": ["tabs", "contextMenus", "storage"],
  "commands": {
    "tab-history-back": {
      "suggested_key": {
        "default": "Alt+Shift+Left",
        "mac": "Command+Left"
      },
      "description": "Go back in tab history without reordering"
    },
    "tab-history-forward": {
      "suggested_key": {
        "default": "Alt+Shift+Right",
        "mac": "Command+Right"
      },
      "description": "Go forward in tab history without reordering"
    },
    "open-tab-manager": {
      "suggested_key": {
        "default": "Ctrl+Shift+T"
      },
      "description": "Open tab manager window"
    }
  },
  "action": {
    "default_title": "Switch to previous tab",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
